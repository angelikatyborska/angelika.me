<style lang="scss">
  @use "../styles/variables";
  @use "../styles/mixins";
  @use "../styles/media-queries";
  @use "../styles/colors";

  .grid {
    display: grid;
    grid-template-columns: auto;
    grid-row-gap: variables.$gap-medium;
    grid-column-gap: variables.$gap-medium;
    align-items: start;

    @media #{media-queries.$medium} {
      grid-template-columns: auto auto;
    }
  }

  .column-image {
    @include mixins.box();
    grid-row: 2;
    background: colors.$white;
    padding: variables.$gap-medium;
    margin: 0 auto;
    --text-color: colors.$text-color-light;
    color: colors.$text-color-light;

    @media #{media-queries.$medium} {
      grid-row: 1;
      grid-column: 2;
      width: auto;
      margin-left: variables.$gap-medium;

      img {
        width: 250px;
      }
    }

    @media #{media-queries.$big} {
      margin-top: -1 * variables.$gap-medium;
      margin-left: variables.$gap-medium;
      transform: rotate(-2deg);
    }
  }

  .portrait {
    display: block;
  }
</style>
