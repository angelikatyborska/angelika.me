---
type Props = {
  src: string;
  caption?: string;
};

const { src, caption } = Astro.props;
---

<figure>
  {/* eslint-disable-next-line astro/jsx-a11y/media-has-caption */}
  <video src={src} controls> </video>
  <figcaption>
    {!caption && Astro.slots.has("caption") && <slot name="caption" />}
    {!Astro.slots.has("caption") && caption}
  </figcaption>
</figure>
